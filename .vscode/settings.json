{
  "editor.formatOnSave": true,
  "files.associations": {
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*": "django-txt"
  },
  "python.formatting.provider": "black",
  "python.pythonPath": "/usr/local/bin/python",
  "python.linting.pylintArgs": [
    "--load-plugins",
    "pylint_django",
    "--disable=C0111"
  ]
}
